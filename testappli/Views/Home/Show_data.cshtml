@{

    Layout = null;

}



<!DOCTYPE html>



<html>

<head>

    <meta name="viewport" content="width=device-width" />

    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        .tableData {
            border-left: solid 1px #D8C3C3;
            border-top: solid 1px #D8C3C3;
        }



            .tableData tr {
            }



            .tableData td, .tableData th {
                border-right: solid 1px #D8C3C3;
                border-bottom: solid 1px #D8C3C3;
                text-align: left;
                padding: 5px;
            }



            .tableData td {
            }



            .tableData th {
                background-color: #FAFAFA;
                padding: 7px 5px;
                border-bottom-color: #9C9C9C;
            }



        .odd {
            background-color: #f3f3f3;
        }



        .even {
            background-color: #ffffff;
        }
    </style>



</head>

<body ng-app="Homeapp">

    <div ng-controller="HomeController">

        <table class="tableData">

            <tr>

                <th>SID</th>

                <th>Student Name</th>

                <th>Father Name</th>

                <th>Department</th>

                <th>Semester</th>

                <th>Roll No</th>

                <th>CNIC</th>

                <th>Mobile No</th>
                
                <th>Email</th>
                
                <th>Password</th>

                <th>Registeation DateTime</th>

            </tr>

            <tr ng-repeat="e in record" ng-class-even="'even'" ng-class-odd="'odd'">

                <td>{{e.sid}}</td>

                <td>{{e.std_name}}</td>

                <td>{{e.f_name}}</td>

                <td>{{e.Department}}</td>

                <td>{{e.semester}}</td>

                <td>{{e.roll_no}}</td>
               
                 <td>{{e.cnic}}</td>
                
                <td>{{e.mob_no}}</td>

                <td>{{e.google_id}}</td>

                <td>{{e.passworrd}}</td>

                <td>{{e.studentregisterationtime}}</td>

                <td><a href="/Home/update_data?id={{e.sid}}">Update</a></td>

                <td><a ng-click="deleterecord(e.sid)">Delete</a></td>

            </tr>

        </table>

    </div>
    <script src="~/Scripts/AngularController/angular.min.js"></script>

    <script src="~/Scripts/AngularController/HomeAngularJS.js"></script>

</body>

</html>
