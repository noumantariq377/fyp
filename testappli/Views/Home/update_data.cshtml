@{

    Layout = null;

}



<!DOCTYPE html>



<html>

<head>

    <meta name="viewport" content="width=device-width" />

    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>

<body>

    <div ng-app="Homeapp" ng-controller="HomeController" data-ng-init="loadrecord(@Convert.ToInt32(Request.QueryString["id"]))">

        <div class="container">

            <div class="row">

                <div class="col-sm-2"></div>

                <div class="col-sm-8">

                    <div class="form-group">

                        <label>Student Name</label>

                        <input type="text" ng-model="Student.std_name" class="form-control" />

                    </div>

                    <div class="form-group">

                        <label>Father Name</label>

                        <input type="password" ng-model="Student.f_name" class="form-control" />

                    </div>

                    <div class="form-group">

                        <label>Department</label>

                        <input type="text" ng-model="Student.Department" class="form-control" />

                    </div>

                    <div class="form-group">

                        <label>Semester</label>

                        <input type="text" ng-model="Student.semester" class="form-control" />

                    </div>

                    <div class="form-group">

                        <label>Roll No</label>

                        <input type="text" ng-model="Student.roll_no" class="form-control" />

                    </div>

                    <div class="form-group">

                        <label>CNIC</label>

                        <input type="text" ng-model="Student.cnic" class="form-control" />

                    </div>

                    <div class="form-group">

                        <label>Mobile No</label>

                        <input type="text" ng-model="Student.mob_no" class="form-control" />

                    </div>

                    <div class="form-group">

                        <label>Email</label>

                        <input type="text" ng-model="Student.google_id" class="form-control" />

                    </div>

                    <div class="form-group">

                        <label>Passworrd</label>

                        <input type="text" ng-model="Student.passworrd" class="form-control" />

                    </div>

                    <div class="form-group">

                        <input type="button" class="btn btn-primary" ng-click="updatedata()" value="{{btntext}}" />

                    </div>

                </div>

                <div class="col-sm-2"></div>

            </div>

        </div>
    </div>
    <script src="~/Scripts/AngularController/angular.min.js"></script>
    <script src="~/Scripts/AngularController/HomeAngularJS.js"></script>

</body>

</html>